@model LocalStore.Models.Store

<h1>Create Store</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="StoreName" class="control-label"></label>
        <input asp-for="StoreName" id="StoreName" name="StoreName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StoreDescription" class="control-label"></label>
        <input asp-for="StoreDescription" id="StoreDescription" name="StoreDescription" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
